<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <h1>Cart</h1>
                <ul>
                    <% for (let product of products) { %>
                        <li>
                            <span class="product__title"><%= product.productData.title %></span>
                            <span class="product__price">$<%= product.productData.price %></span>
                            <span class="product__qty">Qty: <%= product.qty %></span>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" name="productId" value="<%= product.productData.id %>" />
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </li>
                    <% } %>
                </ul>
                <form action="/cart/checkout" method="POST">
                    <button type="submit">Checkout</button>
                </form>
            <% } else { %>
                <h1>No products in Cart</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>